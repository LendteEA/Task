<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/marginSize"
    android:background="@drawable/commit_item_select">

    <ImageView
        android:id="@+id/iv_icon_list"
        android:layout_width="@dimen/itemIconSize"
        android:layout_height="@dimen/itemIconSize"
        android:contentDescription="@string/todo"
        android:src="@drawable/ic_person" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/marginSize">
        <TextView
            android:id="@+id/tv_choose_stu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="@dimen/dp_18"
            android:text="学生姓名"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp_2"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_choose_stu_major_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_20"
                android:text="专业名称"
                android:textColor="#111111"
                android:textSize="@dimen/dp_15"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_choose_stu_college_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学院名称"
                android:textColor="#111111"
                android:textSize="@dimen/dp_15"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/iv_choose_stu_conform"
        android:layout_width="@dimen/itemPlaySize"
        android:layout_height="@dimen/itemPlaySize"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/marginSize"
        android:contentDescription="@string/todo"
        android:src="@drawable/ic_check_24dp" />

    <ImageView
        android:id="@+id/iv_choose_stu_delete"
        android:layout_width="@dimen/itemPlaySize"
        android:layout_height="@dimen/itemPlaySize"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/marginSize"
        android:contentDescription="@string/todo"
        android:src="@drawable/ic_false" />


</LinearLayout>